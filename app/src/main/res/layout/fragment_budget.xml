<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x30"
            android:layout_gravity="center_vertical">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/v_circle_1"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_2"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_3"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle" />

                <View
                    android:id="@+id/v_circle_4"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle1" />

            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x300"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/x20">


            <com.app.merchanttreatzasia.ui.views.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:text="Budget"
                android:textSize="@dimen/x20"
                app:typeface="@string/font_normal"
                />


            <com.github.florent37.androidslidr.Slidr
                android:id="@+id/sbBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:slidr_regions_centerText="false"
                app:slidr_region_leftColor="#4CAF50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:orientation="horizontal">

                <com.app.merchanttreatzasia.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_gravity="left"
                    android:textColor="@color/dark_grey"
                    android:text="Initial Budget\n$200.00"
                    android:textSize="@dimen/x17"
                    app:typeface="@string/font_normal"
                    />


                <com.app.merchanttreatzasia.ui.views.AnyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@color/dark_grey"
                    android:text="Maximum Budget\n $10000.00"
                    android:textSize="@dimen/x17"
                    app:typeface="@string/font_normal"
                    />


            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Submit"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:textAllCaps="false"/>

    </LinearLayout>

</ScrollView>